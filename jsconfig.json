{
  "compilerOptions": {
    "jsx": "react",
    "checkJs": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "api/*": ["src/api/*"],
      "assets/*": ["src/assets/*"],
      "common/*": ["src/common/*"],
      "screens/*": ["src/screens/*"],
      "styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
