{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "api/*": ["src/api/*"],
      "assets/*": ["src/assets/*"],
      "common/*": ["src/common/*"],
      "screens/*": ["src/screens/*"],
      "styles/*": ["src/styles/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
